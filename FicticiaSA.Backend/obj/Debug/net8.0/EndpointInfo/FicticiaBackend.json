  "components": {
    "schemas": {
      "LoginRequest": {
        "required": [
          "password",
          "usuario"
        ],
        "type": "object",
        "properties": {
          "usuario": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "Persona": {
        "required": [
          "genero",
          "identificacion",
          "nombreCompleto"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nombreCompleto": {
            "maxLength": 100,
            "minLength": 3,
            "pattern": "^(?!\\s*$).+",
            "type": "string"
          },
          "identificacion": {
            "maxLength": 20,
            "minLength": 0,
            "pattern": "^(?!\\s*$).+",
            "type": "string"
          },
          "edad": {
            "maximum": 120,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "genero": {
            "minLength": 1,
            "pattern": "Masculino|Femenino|Otro",
            "type": "string"
          },
          "estadoActivo": {
            "type": "boolean"
          },
          "maneja": {
            "type": "boolean"
          },
          "usaLentes": {
            "type": "boolean"
          },
          "diabetico": {
            "type": "boolean"
          },
          "enfermedadOtra": {
            "maxLength": 200,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegisterDto": {
        "required": [
          "nombreUsuario",
          "password"
        ],
        "type": "object",
        "properties": {
          "nombreUsuario": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
